%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "users/shared/error_messages", resource: resource
  .field
    = f.label :name, class: 'input_label'
    %br/
    = f.text_field :name, autofocus: true, autocomplete: "email", class: 'input_area'
  .field
    = f.label :email, class: 'input_label'
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input_area'
  .field
    = f.label :password, class: 'input_label'
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", class: 'input_area'
  .field
    = f.label :password_confirmation, class: 'input_label'
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", class: 'input_area'
  .actions
    = f.submit "Sign up", class: 'btn btn_sign'
= render "users/shared/links"
