.header
  .header_inner
    .header_left
      .header_title
        .header_title_logo
          = link_to root_path do
            = image_tag 'App-logo.png'
    .header_right
      .header_nav
        %ul
          - if user_signed_in?
            %li= link_to 'お気に入り', "#"
            %li= link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete' }
          - else
            %li= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post
            %li= link_to 'ログイン', new_user_session_path
            %li= link_to '新規登録', new_user_registration_path
          %li= link_to '店舗一覧', shops_path